{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": ["--compilers", "js:babel-core/register", "${file}", "--no-timeouts"],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "sourceMaps": true,
      "env": { "NODE_ENV": "test"}
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceRoot}/dist/index.js",
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "build",
      "outFiles": [
        "${workspaceRoot}/dist/**.js"
      ]
    }
  ]
}
